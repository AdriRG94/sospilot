<sml:SensorML
        xmlns:swes="http://www.opengis.net/swes/2.0" xmlns:sos="http://www.opengis.net/sos/2.0"
        xmlns:swe="http://www.opengis.net/swe/1.0.1" xmlns:sml="http://www.opengis.net/sensorML/1.0.1"
        xmlns:gml="http://www.opengis.net/gml" xmlns:xlink="http://www.w3.org/1999/xlink"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0.1">
    <sml:member>
        <sml:System>
            <sml:identification>
                <sml:IdentifierList>
                    <sml:identifier name="uniqueID">
                        <sml:Term definition="urn:ogc:def:identifier:OGC:1.0:uniqueID">
                            <sml:value>urn:ogc:object:feature:Sensor:RIVM:rivm-sensor-{station_id}</sml:value>
                        </sml:Term>
                    </sml:identifier>
                    <sml:identifier name="longName">
                        <sml:Term definition="urn:ogc:def:identifier:OGC:1.0:longName">
                            <sml:value>RIVM Rijksinstituut voor Volksgezondheid en Milieu (http://www.rivm.nl) - Station {municipality}
                            </sml:value>
                        </sml:Term>
                    </sml:identifier>
                    <sml:identifier name="shortName">
                        <sml:Term definition="urn:ogc:def:identifier:OGC:1.0:shortName">
                            <sml:value>RIVM - Station {municipality}</sml:value>
                        </sml:Term>
                    </sml:identifier>
                </sml:IdentifierList>
            </sml:identification>
            <sml:capabilities name="offerings">
                <swe:SimpleDataRecord>
                    <swe:field name="Offering for sensor {station_id}">
                        <swe:Text definition="urn:ogc:def:identifier:OGC:offeringID">
                            <swe:value>http://sensors.geonovum.nl/rivm-lml/offering/lml/{station_id}</swe:value>
                        </swe:Text>
                    </swe:field>
                </swe:SimpleDataRecord>
            </sml:capabilities>
 <!--           <sml:capabilities name="parentProcedures">
                <swe:SimpleDataRecord>
                    <swe:field name="parentProcedure">
                        <swe:Text>
                            <swe:value>http://sensors.geonovum.nl/rivm-lml/procedure/1</swe:value>
                        </swe:Text>
                    </swe:field>
                </swe:SimpleDataRecord>
            </sml:capabilities>    -->
            <sml:capabilities name="featuresOfInterest">
                <swe:SimpleDataRecord>
                    <swe:field name="featureOfInterestID">
                        <swe:Text>
                            <swe:value>http://sensors.geonovum.nl/rivm-lml/featureOfInterest/{station_id}</swe:value>
                        </swe:Text>
                    </swe:field>
                </swe:SimpleDataRecord>
            </sml:capabilities>
            <sml:position name="sensorPosition">
                <swe:Position referenceFrame="urn:ogc:def:crs:EPSG::4326">
                    <swe:location>
                        <swe:Vector gml:id="STATION_LOCATION">
                            <swe:coordinate name="easting">
                                <swe:Quantity axisID="x">
                                    <swe:uom code="degree"/>
                                    <swe:value>{station_lon}</swe:value>
                                </swe:Quantity>
                            </swe:coordinate>
                            <swe:coordinate name="northing">
                                <swe:Quantity axisID="y">
                                    <swe:uom code="degree"/>
                                    <swe:value>{station_lat}</swe:value>
                                </swe:Quantity>
                            </swe:coordinate>
                            <swe:coordinate name="altitude">
                                <swe:Quantity axisID="z">
                                    <swe:uom code="m"/>
                                    <swe:value>{station_altitude}</swe:value>
                                </swe:Quantity>
                            </swe:coordinate>
                        </swe:Vector>
                    </swe:location>
                </swe:Position>
            </sml:position>
            <sml:inputs>
                <sml:InputList>
                    <sml:input name="air">
                        <swe:ObservableProperty definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/air"/>
                    </sml:input>
                </sml:InputList>
            </sml:inputs>
            <sml:outputs>
                <sml:OutputList>
                    <sml:output name="value_benzeen">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/benzeen">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_CO">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/CO">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_NH3">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/NH3">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_NO">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/NO">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_NO2">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/NO2">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_O3">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/O3">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_PM10">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/PM10">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_PM25">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/PM25">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                    <sml:output name="value_SO2">
                        <swe:Quantity definition="http://sensors.geonovum.nl/rivm-lml/observableProperty/SO2">
                            <swe:uom code="ug/m3"/>
                        </swe:Quantity>
                    </sml:output>
                 </sml:OutputList>
            </sml:outputs>
        </sml:System>
    </sml:member>
</sml:SensorML>
